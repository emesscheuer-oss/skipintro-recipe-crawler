.sitc-controls {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between; /* Skalierung links, Buttons rechts */
  gap: .75rem;
  margin: 1rem 0;
}

.sitc-yield-label {
  font-weight: 600;
  margin-right: .25rem;
}

.sitc-servings-control {
  display: inline-flex;
  align-items: center;
  gap: .5rem;
  border-radius: 999px;
  padding: .25rem .5rem;
}

/* Skalierungsbuttons (rund, schwarz) */
.sitc-btn {
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    font-size: 20px;
    cursor: pointer;
    line-height: 36px;
    text-align: center;
    margin: 0 5px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.sitc-btn:hover {
    background-color: #333;
}

/* Container fÃ¼r Funktionsbuttons rechts */
.sitc-actions {
  display: flex;
  gap: 8px;
}

.sitc-servings-display {
  min-width: 2ch;
  text-align: center;
  font-variant-numeric: tabular-nums;
}

ul.sitc-ingredients {
  list-style: none;
  padding-left: 0;
  margin-left: 0!important;
}
.sitc-ingredient {
  margin: .35rem 0;
}
/* Label as 2-column grid: [checkbox][text]; enables hanging indent */
.sitc-ingredient > label {
  display: grid;
  grid-template-columns: auto 1fr;
  align-items: start;
  column-gap: .5rem;
  margin: 0;
}
/* Checkbox flush left without margin; slight vertical tweak */
.sitc-ingredient .sitc-chk {
  margin: 0;
  transform: translateY(1px);
  margin-top: 6px;
}

/* Ensure text block wraps nicely in its grid column */
.sitc-ingredient .sitc-line { display: block; }
.sitc-ingredient.checked .sitc-name {
  text-decoration: line-through;
  opacity: .7;
}

.sitc-shopping {
  margin-top: 1rem;
}
.sitc-shopping .sitc-shopping-btn {
  background: #000;
  color: #fff;
  border: 0;
  border-radius: 999px;
  padding: .45rem .8rem;
  cursor: pointer;
}
.sitc-shopping-panel {
  display: none;
  margin-top: .75rem;
  border: 1px dashed #aaa;
  border-radius: .5rem;
  padding: .75rem;
}
.sitc-shopping-panel.active { display: block; }

.sitc-trash {
  margin-top: 1rem;
}
.sitc-trash .sitc-trash-btn {
  background: #000;
  color: #fff;
  border: 0;
  border-radius: 999px;
  padding: .45rem .8rem;
  cursor: pointer;
}

.sitc-source {
  margin-top: 1rem;
  font-size: .95rem;
}

.sitc-qty {
  font-weight: bold;
}
